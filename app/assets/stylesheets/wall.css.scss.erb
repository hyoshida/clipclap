@import "compass/css3";
@import "zurui-sass";
@import "common";

/* container */
#container {
}

#container .avatar img {
  width: 32px;
  height: 32px;
}

.hidden {
  display: none !important;
  visibility: hidden;
}

#page-nav {
  clear: both;
  /* display: none; */
  text-indent: -9999px;
}

.box {
  @include box(<%= Settings.thumb_width %>px);
  @include border-top-radius(5px);
  width: <%= Settings.thumb_width %>px;

  .title {
    position: relative;
    top: -5px;
    margin: 0;
    padding: 4px 10px;

    display: block;
    width: <%= Settings.thumb_width %>px;
    overflow: hidden;
    text-overflow: ellipsis;
    /* text-wrap: none; */

    a {
      font-weight: bold;
      color: #444;
      text-decoration: none;

      &:hover {
        color: #666;
        text-decoration: underline;
        background: none;
      }
    }
  }

  .image_box a img {
    @include border-top-radius(5px);
    cursor: url("<%= image_path 'cursor_zoom_in.cur' %>"), pointer;
  }
}


ul.comments {
  list-style: none;
  margin: 0;
  padding: 0;
  word-break: break-all;
  word-wrap: break-word;
  color: #444;
  background-color: #fafafa;
  @include border-bottom-radius(5px);
  &.signed_in {
    @include border-bottom-radius(0);
  }
}

ul.comments li {
  padding: 5px;
  background-color: transparent;
  @include zurui-line-top(0.1, 1.0);
  position: relative;
  a.remove {
    position: absolute;
    right: 5px;
    top: 5px;
  }
  i.icon-remove {
    padding: 3px;
    border: 1px solid #ddd;
    visibility: hidden;
  }
  &:hover i.icon-remove {
    visibility: visible;
  }
}

ul.comments li a:hover {
  i.icon-remove {
    color: #fff;
    background-color: #eee;
    text-decoration: none;
  }
}

.avatar {
  a {
    display: block;
  }

  img {
    @include border-radius(4px);
  }
}

ul.comments li p {
  display: block;
  padding: 5px;

  &.body {
    padding: 5px 0;
  }
  &.time {
    color: #aaa;
    padding: 0 0 5px;
  }
}

.comment_feild .avatar {
  clear: both;
  float: left;
  padding: 3px 10px 5px 5px;
}

.comment_feild form {
  padding: 5px;
  @include zurui-line-top(0.1, 1.0);
  background-color: #fafafa;
  @include border-bottom-radius(5px);

  input {
    margin: 0;
    margin-top: 4px;
    width: 165px;
  }
}


/* info bar */
.info {
  padding: 0 10px;
}

.info p {
  display: inline-block;
  margin-right: 10px;
  margin-top: 0;
  margin-bottom: 10px;
}


/* status bar */
.image_box {
  position: relative;
}

.image_box .status {
  display: block;
  height: 18px;
  padding: 6px 8px;
  position: absolute;
  left: 0;
  top: 0;
  width: <%= Settings.thumb_width - 16 %>px;
  visibility: hidden;
}

.image_box:hover .status {
  visibility: visible;
}

.image_box .status .count {
  font-size: 120%;
}

.image_box .status p {
  display: block;
  width: <%= Settings.thumb_width - 16 %>px;
  margin: 0;
  color: #fff;
  font-weight: bold;
}

.image_box .status .tag {
  display: none;
  float: left;
  text-align: left;
  width: <%= (Settings.thumb_width) / 2 - 16 %>px;
  overflow: hidden;
  text-wrap: none;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.image_box .status a {
  color: #fff;
  cursor: pointer;
  &.inactive {
    @include opacity(0.5);
  }
}

.image_box .status .reclip {
  width: 50%;
  @include btn-left;

  a {
    @include btn-reclip;
  }
}

.image_box .status .like {
  @include btn-right;
}

.image_box .status .like a {
  @include btn-like;
  &:hover.opacity, &:focus.opacity {
    @include opacity(0.75);
  }
}

.image_box .status [class^="icon-"], .image_box .status [class*=" icon-"] {
  display: inline;
}

.image_box .status [class^="icon-"]:before, .image_box .status [class*=" icon-"]:before {
  letter-spacing: 3px;
}

.image_box .status a {
  & .icon-heart:before {
    color: #e30;
  }
  &:hover .icon-heart:before, &:focus .icon-heart:before {
    color: #333;
  }

  & .icon-heart-empty:before {
    color: #333;
  }
  &:hover .icon-heart-empty:before, &:focus .icon-heart-empty:before {
    @extend .icon-heart:before;
    color: #e30;
  }
}

.image_box .status .icon-remove {
  margin-left: 0.5em;
}

.image_box .status .icon-remove:before {
  letter-spacing: 0;
}

/* group */
@import "compass/utilities";

$group_box_width: <%= Settings.thumb_width %>px;
$group_box_height: <%= Settings.thumb_width %>px;

.group_box {
  $margin: 5px;
  $border: 1px;

  @include border-radius(5px);

  .title {
    margin: 0.75em $margin 0;
    padding: 0;
    width: $group_box_width - ($margin * 2);
    font-size: x-large;
    text-align: center;

    a {
      @include ellipsis;

      &:hover {
        text-decoration: none;
      }
    }
  }

  .description {
    margin: 0.25em $margin 0.75em;
    color: #888;
    text-align: center;

    .count {
      margin: 0 0.5em;
    }
  }

  .image_box {
    margin-bottom: $margin;
    width: $group_box_width;
    height: $group_box_height;
    overflow: hidden;
    background-color: #fff;

    img {
      max-width: none;
    }
  }

  .sub_image_boxes {
    $width: $group_box_width - ($margin * 2);
    $height: ($group_box_height / 3) - ($margin * 2);

    display: inline-block;
    margin: $margin;
    margin-top: 0;
    width: $width;
    height: $height;
    padding: 0;
    overflow: hidden;

    li {
      display: inline-block;
      width: ($width - ($margin * 2)) / 3 - ($border * 2);
      height: $height - ($border * 2);
      overflow: hidden;
      border: 1px solid #aaa;
      @include border-radius(5px);

      &:first-child {
        margin-right: $margin;
      }

      &:last-child {
        margin-left: $margin;
      }
    }

    a {
      display: block;
      width: 100%;
      height: 100%;
      cursor: pointer;
      background-color: #eee;

      img {
        max-width: none;
        @include border-radius(0);
      }
    }
  }
}

/* done */
#done .more a {
  $height: 3em;

  display: block;
  margin-top: 10px;
  width: 100%;
  height: $height;
  line-height: $height;
  font-family: $font_gothic;
  font-size: large;
  font-weight: bold;
  text-align: center;
  color: #fff;
  border: 1px solid #ff9d00;
  @include zurui-gradient-top-lighten(#fb2);
  @include text-shadow( 0 -1px 0 rgba(#000, 0.25));
  @include border-radius(4px);
  @include transition-property(opacity);
  @include transition-duration(0.25s);
  @include opacity(1);

  &:hover {
    @include opacity(0.75);
  }
}

/* adsense */
.adsense {
  padding: 20px 0 !important;
  text-align: center;

  & > p {
    margin-bottom: 0.5em;
    color: #aaa;
  }
}
