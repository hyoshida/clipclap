/* commons */
.lfloat { 
  float: left;
}

.rfloat { 
  float: right;
}

.clear { 
  clear: both;
}

.icon-remove {
  color: #ccc;
}

.tooltip.in {
  opacity: 0.9;
}


/* header */
body {
  margin: 0;
  padding: 0;
}

#header {
  top: 0;
  left: 0;
  right: 0;
  min-width: 980px;
  height: 40px;
  position: fixed;
  @include zurui-gradient-top-lighten(#1a1a1a);
  border-bottom: 4px solid #f70;
  z-index: 999;
}

@mixin hilight_menu_item {
  @include background-image(linear-gradient(top, #fa0, #f70));
}

@mixin hilight_right_menu_item {
  @include zurui-gradient-top-lighten(#111);
}

#header a {
  display: block;
  height: 40px;
  line-height: 40px;
  padding: 0 20px;
  text-decoration: none;

  color: #fff;
  &:hover, &:focus {
    @include hilight_menu_item;
  }
}

.dropdown.open a.dropdown-toggle {
  @include hilight_right_menu_item;
}

.navbar .pull-right .dropdown-menu {
  left: auto;
  right: 0px;
  margin-top: 3px !important;
}

#headerBar {
  height: 40px;
  position: relative;
}

#logo a {
  text-align: center;
  text-decoration: none;
  font-size: 100%;
  color: #fff;
  &:hover, &:focus {
    @include hilight_right_menu_item;
  }
}

#menu {
  margin-left: 10px;
}

#menu li {
  display: inline-block;
  height: 40px;
}

#signin a {
  text-align: right;
  &:hover, &:focus {
    @include hilight_right_menu_item;
  }
}

#signin .profile {
  a {
    font-weight: normal;
  }
  span {
    display: inline-block;
    vertical-align: middle;
    margin-right: 10px;
  }
  span.avatar {
    vertical-align: top;
    img {
      margin: 4px 0;
    }
  }
}

#signup a {
  font-weight: bold;
  text-align: right;
  background: #a30;
  @include background-image(linear-gradient(top, #c40, #a30));
  border-left: 1px solid transparent;
  border-right: 1px solid transparent;
}

#signup a:hover {
  color: #fff;
  background: #e30;
  @include background-image(linear-gradient(top, #f40, #e30));
  border-left: 1px solid #d20;
  border-right: 1px solid #d20;
}

#account_from {
  width: 300px;
}

#account_from form {
  padding: 10px;
  text-align: center;
  background-color: #fff3da;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  input {
    margin-bottom: 10px;
    &[type="radio"], &[type="checkbox"] {
      margin-top: 10px;
    }
  }
}

#account_from a {
  color: #333;
  font-weight: normal;
  text-align: left;
  background: transparent;
}

#account_from ul {
  margin: 0px 0px;
}

#account_from li a {
  &:hover, &:focus {
    color: #fff;
    text-decoration: underline;
    @include hilight_menu_item;
  }
}

