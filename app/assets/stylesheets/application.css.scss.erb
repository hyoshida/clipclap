@import "bootstrap";
@import "bootstrap-modal";
@import 'font-awesome';
@import "compass/utilities";
@import "compass/css3";
@import "zurui-sass";
@import "common";

/* commons */
.lfloat {
  float: left;
}

.rfloat {
  float: right;
}

.clear {
  clear: both;
}

.icon-remove {
  color: #ccc;
}

.tooltip.in {
  opacity: 0.9;
}

.must {
  &:after {
    content: '*';
    color: red;
    font-weight: bold;
  }
}


/* header */
$header_height: 40px;
$header_border_height: 4px;
$logo_width: 150px;
$logo_height: $header_height;

@mixin hilight_menu_item {
  @include background-image(linear-gradient(top, #fa0, #f70));
}

@mixin hilight_right_menu_item {
  @include zurui-gradient-top-lighten(#111);
}

#header {
  margin-bottom: $header_height;
  height: $header_height;
  font-size: 13px;
  font-family: $font_gothic;
  font-weight: bold;
  text-align: center;
  background-color: #000;
  border-bottom: $header_border_height solid #f70;
  @include zurui-gradient-top-lighten(#1a1a1a);
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

#header .wrap {
  .left {
    float: left;
  }

  .right {
    float: right;
  }

  .center {
    margin-left: -($logo_width / 2);
    position: absolute;
    left: 50%;
  }

  li {
    display: inline-block;
  }
}

#header a {
  display: block;
  height: $header_height;
  line-height: $header_height;
  color: #fff;
  text-decoration: none;
  text-align: center;
  padding: 0 1.5em;

  &:hover {
    @include hilight_menu_item;
  }
}

#header .logo {
  display: inline-block;
  width: $logo_width;
  height: $logo_height;
  line-height: $logo_height;
  color: #fff;
  font-size: 16px;

  a:hover {
    @include hilight_right_menu_item;
  }
}

#header .profile a,
#header .signin a {
  font-weight: normal;

  &:hover {
    @include hilight_right_menu_item;
  }
}

#header .profile span {
  display: inline-block;
  vertical-align: middle;
  margin-right: 10px;

  &.avatar {
    vertical-align: top;

    img {
      margin: 4px 0;
      width: 32px;
      height: 32px;
    }
  }
}

#header .signup a {
  font-weight: bold;
  text-align: right;
  background: #a30;
  @include background-image(linear-gradient(top, #c40, #a30));
  border-left: 1px solid transparent;
  border-right: 1px solid transparent;

  &:hover {
    color: #fff;
    background: #e30;
    @include background-image(linear-gradient(top, #f40, #e30));
    border-left: 1px solid #d20;
    border-right: 1px solid #d20;
  }
}

#header form {
  $width: 250px;
  $padding: 12px;

  width: $width;
  padding: $padding;
  text-align: center;
  background-color: #fff3da;
  @include border-bottom-radius(4px);

  input {
    margin-bottom: 10px;

    &[type="email"], &[type="password"] {
      width: ($width / 2) - $padding * 2;
    }

    &[type="email"] {
      margin-left: 0;
      margin-right: $padding / 2;
    }

    &[type="password"] {
      margin-right: 0;
      margin-left: $padding / 2;
    }

    &[type="radio"], &[type="checkbox"] {
      margin-top: 10px;
    }

    &[type="submit"] {
      @extend .btn;
      @extend .btn-warning;
      @extend .btn-large;
      margin-bottom: 10px;
    }
  }
}

#header .dropdown-menu {
  margin-top: 3px;
  min-width: 220px;

  li {
    display: block;
  }

  a {
    color: #333;
    font-weight: normal;
    text-align: left;
    background: transparent;

    &:hover {
      color: #fff;
      text-decoration: underline;
      @include hilight_menu_item;
    }
  }
}

#header .left .dropdown {
  .dropdown-menu {
    @extend .pull-left;
  }

  &.open a.dropdown-toggle {
    @include hilight_menu_item;
  }
}

#header .right .dropdown {
  .dropdown-menu {
    @extend .pull-right;
  }

  &.open a.dropdown-toggle {
    @include hilight_right_menu_item;
  }
}

#header a.dropdown-toggle .angle-down {
  margin-right: 0;
  @include icon(angle-down);
  &:before {
    margin-right: 0;
    margin-left: 0.4em;
  }
}

#header .signin a.dropdown-toggle {
  @include icon(signin);
}

#notice {
  position: absolute;
  top: $header_height;
  width: 100%;
  height: 40px;
  line-height: 40px;
  color: #fff;
  overflow: hidden;
  @include zurui-gradient-top-lighten(#f70);
}

/* main */
$main_width: 1000px;

#main {
  margin-top: $header_height + $header_border_height;
  padding: 10px;
  font-size: 13px;
}

/* container */
#main .masonry {
  margin: 0 auto;
}

/* dialog */
.modal h3 {
  font-size: x-large;
}

.modal {
  &.fade {
    top: -25%;
  }
  &.fade.in {
    top: 50%;
  }
}

.wrapper {
  @extend .page-container;

  #header {
    @extend .navbar-fixed-top;
  }
}
