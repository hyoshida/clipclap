@import "common";

// introduction
#introduction {
  margin: 40px 0 60px;
  text-align: center;
}

#introduction h1 {
  margin: 0.5em 5px;
  color: #666;
  font-size: x-large;
  font-family: $font_serif;
  line-height: 250%;
  border-bottom: 1px solid #888;
}

#introduction p {
  color: #888;
  line-height: 250%;
  font-family: $font_gothic;

  i {
    margin: 0 0.5em;
    @include opacity(0.75);
  }

  .btn-reclip {
    color: #000;
    @include icon(paper-clip);
    @include btn-reclip;
  }

  .btn-like {
    @include icon(heart-empty);
    @include btn-like;
  }

  .tip {
    margin: 0 3px;
    padding: 3px 6px;
    color: #666;
    background-color: #eee;
    border: 1px solid #aaa;
    @include border-radius(4px);
  }
}
