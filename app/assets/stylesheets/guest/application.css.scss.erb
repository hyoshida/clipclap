@import "bootstrap";
@import 'font-awesome';
@import "compass/utilities";
@import "compass/css3";
@import "zurui-sass";
@import "common";

$font-awesome-enable-ie7-support: true;

// variables
$header_width: $contents_width;
$header_height: 40px;

// wrapper
#wrapper {
  background: #f0f0e9;
}

// header
#header {
}

#header .wrap {
}

#header .logo {
  color: #fff;
  height: $header_height;
  line-height: $header_height;
  font-size: normal;
  font-family: $font_gothic;
  font-weight: bold;
  text-align: center;
  background-color: #000;
  border-bottom: 4px solid #f70;
  @include zurui-gradient-top-lighten(#1a1a1a);
}

#header .form {
  margin: 0px auto;
  padding: 30px 0;
  width: $header_width / 2 + 50px * 2;
  text-align: center;
  border: 1px solid #aaa;
  border-top: 0;
  background-color: #fff;
  @include border-bottom-radius(4px);

  p {
    display: inline-block;
    margin: 10px;
  }

  .facebook a, .signup a {
    padding: 10px 20px;
    font-size: large;
    font-family: $font_gothic;
    @extend .btn;
  }

  .facebook a {
    @extend .btn-primary;
    @include icon(facebook);
    &:before {
      margin-right: 15px;
      padding-right: 17px;
      border-right: 1px solid #37d;
    }
  }

  .description {
    margin-top: 20px;

    a {
      font-weight: bold;
      color: #f90;
    }
  }
}

// container
#container {
  margin: 0 auto;
  font-size: 75%;
}

// siginup_dialog
#siginup_dialog {
  $width: $header_width / 2 + 50px * 2;

  margin-left: -($width / 2 + 1);
  width: $width;
  z-index: 100;
  position: fixed;
  top: 0;
  left: 50%;

  @extend #header;
}

.ui-widget-overlay {
  position: fixed;
  top: 0;
  left: 0;
}
