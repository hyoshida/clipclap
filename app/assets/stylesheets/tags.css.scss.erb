@import "compass/utilities";
@import "compass/css3";

$group_box_width: <%= Settings.thumb_width %>px;
$group_box_height: <%= Settings.thumb_width %>px;

li.group_box {
  display: block;
  width: $group_box_width;
  padding: 0;
  border: 0;

  h2.title {
    margin: 10px 0 0;
    padding: 0;
    width: $group_box_width;

    a {
      @include ellipsis;
    }
  }

  p.description {
    margin-bottom: 10px;
    color: #888;
    text-align: center;
  }

  .image_box {
    margin: 4px;
    padding: 0;
    width: $group_box_width;
    height: $group_box_height;
    overflow: hidden;
    background-color: #fff;
    border: 1px solid #aaa;
    @include border-radius(5px);

    a {
      display: block;
      cursor: pointer;

      img {
        max-width: none;
      }
    }
  }

  .sub_image_boxes {
    $width: $group_box_width;
    $height: $group_box_height / 3 - 1;

    display: inline-block;
    width: $width;
    height: $height;
    overflow: hidden;
    background-color: #fff;
    border-top: 1px solid #aaa;
    position: absolute;
    top: $width - $height;

    &:first-child {
      @include border-bottom-left-radius(5px);
    }

    &:last-child {
      @include border-bottom-right-radius(5px);
    }

    li {
      display: inline-block;
      width: $group_box_width / 3;
      height: 100%;
      position: relative;

      &:nth-child(even) {
        width: $group_box_width / 3 - 2;
        border-left: 1px solid #aaa;
        border-right: 1px solid #aaa;
      }
    }

    a {
      display: block;
      cursor: pointer;

      img {
        max-width: none;
        @include border-radius(0);
      }
    }
  }
}
