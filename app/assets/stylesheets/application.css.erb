#page-nav {
  /* display: none; */
  text-indent: -9999px;
}

li.box .title {
  font-weight: bold;
  position: relative;
  top: -5px;
  margin: 0;
  padding: 0;
  padding-bottom: 5px;
}

li.box a img, li.box a:visited img {
  border: 2px solid #ccc;
}

li.box a:hover img {
  border: 2px solid #666;
}

li.box a {
  cursor: url("<%= image_path 'cursor_zoom_in.cur' %>"), auto;
}
  
li.box a:hover {
  background: #000;
}

li.box img {
  display: block;
  width: 180px;

  display: block;
  border: 1px solid #ccc;
  background: #fff;
  margin-bottom: 10px;
  vertical-align: bottom;
}

li.box .title {
  display: block;
  width: 180px;
  overflow: hidden;
  text-overflow: ellipsis;
  /* text-wrap: none; */
}

li.box {
  display: block;
  width: 190px;
  float: left;
  margin: 5px;
  padding: 10px;
  padding-bottom: 0;
  list-style-type: none;
  border: 2px solid #aaaacc;
  background: #f3f3ff;
  box-shadow: 0 2px 4px #aaa;
}
