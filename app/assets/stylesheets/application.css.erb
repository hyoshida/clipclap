#page-nav {
  clear: both;
  /* display: none; */
  text-indent: -9999px;
}

li.box .title {
  font-weight: bold;
  position: relative;
  top: -5px;
  margin: 0;
  padding: 0;
  padding-bottom: 5px;
}

li.box a img, li.box a:visited img {
  border: 2px solid #ccc;
}

li.box a:hover img {
  border: 2px solid #666;
}

li.box a {
  cursor: url("<%= image_path 'cursor_zoom_in.cur' %>"), pointer;
}
  

li.box a:hover {
  background: #000;
}

li.box .image_box {
  display: block;
  width: <%= Settings.thumb_width %>px;
}

li.box img {
  display: block;
  border: 1px solid #ccc;
  background: #fff;
  margin-bottom: 10px;
  vertical-align: bottom;
}

li.box .title {
  display: block;
  width: <%= Settings.thumb_width %>px;
  overflow: hidden;
  text-overflow: ellipsis;
  /* text-wrap: none; */
}

li.box {
  display: block;
  float: left;
  width: <%= Settings.thumb_width + 5 %>px;
  margin: 5px;
  padding: 10px;
  padding-bottom: 0;
  list-style-type: none;
  border: 2px solid #aaaacc;
  background: #f3f3ff;
  box-shadow: 0 2px 4px #aaa;
}


/* status bar */
.image_box:hover .status {
  display: none;
}

.image_box .status {
  display: block;
  position: absolute;
}

.image_box .status p {
  display: block;
  position: absolute;
  left: 2px;
  bottom: -1px;
  width: <%= Settings.thumb_width - 16 %>px;
  height: 18px;
  padding: 6px 8px;
  color: #fff;
}

.image_box .status .tag {
  z-index: 2;
  text-align: left;
  width: <%= (Settings.thumb_width) / 2 - 16 %>px;
  overflow: hidden;
  text-wrap: none;
  white-space:  nowrap;
  text-overflow: ellipsis;
}

.image_box .status .like {
  z-index: 1;
  text-align: right;

  background-color: #000;
  background-image: url("<%= image_path 'transblack.png' %>") repeat;
  opacity: 0.75;
  filter: alpha(opacity=75);
  -ms-filter: "alpha( opacity=75 )";
}

.image_box .status  a {
  color: #fff;
  cursor: pointer;
}
