/* commons */
.lfloat { 
  float: left;
}

.rfloat { 
  float: right;
}

.clear { 
  clear: both;
}



/* header */
body, #header * {
  margin: 0;
  padding: 0;
}

#header {
  top: 0;
  left: 0;
  right: 0;
  position: fixed;
  z-index: 300;
  min-width: 980px;
  height: 40px;
  background: #333;
  /* box-shadow: 0 2px 4px #999; */
}

#header a {
  color: #FFF;
}

#header a:hover {
  color: #000;
  background-color: #DDD;
}

#headerBar {
  margin: 0 auto;
  width: 980px;
  height: 40px;
  /*
  border-left: 1px solid #666;
  border-right: 1px solid #666;
  */
}

#logo {
  margin-right: 10px;
}

#logo a {
  width: 80px;
  text-align: center;
  text-decoration: none;
  font-size: large;
}

#logo a, #menu li a, #signin a, #signup a {
  display: block;
  height: 40px;
  line-height: 40px;
  padding: 0 20px;
  text-decoration: none;
}

#menu {
  margin-left: 10px;
}

#menu li {
  display: inline-block;
  height: 40px;
}

#signin a {
  font-weight: bold;
  text-align: right;
}

#signup a {
  font-weight: bold;
  text-align: right;
  background: #a30;
}

#signup a:hover {
  color: #fff;
  background: #e30;
}

#account_from {
  display: none;
  background-color: #666;
  background-color: #fff;
  padding: 3px;
  border: 1px solid #aaa;
  border-top: 0;
}

#account_from a {
  color: #333;
  font-weight: normal;
  text-align: left;
  text-decoration: underline;
  background: transparent;
}

#account_from li {
  display: inline;
  margin-right: 10px;
}

#account_from li a {
  display: inline; 
  padding: 0;
  width: auto;
  height: auto;
  line-height: auto;
}

#account_from li a:hover {
  color: #fff;
  text-decoration: underline;
  background-color: #000;
}

#signin:hover #account_from {
  display: block;
}

#search_form {
  display: none;
