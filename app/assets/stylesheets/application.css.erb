*/
}



/* main */
#main {
  position: relative;
  top: 40px;
  margin: 0 auto;
  width: 980px;
}

#leftContainer {
  float: left;
  padding: 15px 0;
  width: 120px;
  position: absolute;
  position: fixed;
  top: 40px;
  /* background-color: #ddd; */
}

#leftContainer ul {
  padding: 0;
  padding-bottom: 20px;
  margin: 0;
  list-style-type: none;
}

#leftContainer ul li a {
  display: block;
  padding-left: 20px;
  width: 100px;
  height: 40px;
  line-height: 40px;
  text-align: left;
}

#leftContainer ul li a, #leftContainer ul li a:visited {
  color: #000;
  text-decoration: none;
}

#leftContainer ul li a:hover {
  color: #fff;
  background-color: #666;
}

#leftContainer ul li a[class^="icon-"]:before, #leftContainer ul li a[class*=" icon-"]:before {
  letter-spacing: 10px;
}

#mainContainer {
  float: right;
  width: 838px;
  padding: 0 10px;
  border-right: 1px solid #ccc;
  border-left: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}



/* container */
#container {
  visibility: hidden;
}

#page-nav {
  clear: both;
  /* display: none; */
  text-indent: -9999px;
}

li.box {
  display: block;
  float: left;
  width: <%= Settings.thumb_width + 5 %>px;
  margin: 2px;
  padding: 9px;
  padding-bottom: 0;
  list-style-type: none;
  border: 1px solid #aaa;
  background: #eee;
}

li.box .title {
  position: relative;
  top: -5px;
  margin: 0;
  padding: 4px 0;

  display: block;
  width: <%= Settings.thumb_width %>px;
  overflow: hidden;
  text-overflow: ellipsis;
  /* text-wrap: none; */
}

li.box .title a {
  font-weight: bold;
  color: #444;
  text-decoration: none;
}

li.box .title a:hover {
  color: #666;
  text-decoration: underline;
  background: none;
}

li.box img {
  display: block;
  border: 1px solid #ccc;
  background: #fff;
  margin-bottom: 10px;
  vertical-align: bottom;
}

li.box a img, li.box a:visited img {
  border: 2px solid #666;
}

li.box a:hover img {
  border: 2px solid #666;
}

li.box a {
  cursor: url("<%= image_path 'cursor_zoom_in.cur' %>"), pointer;
}

li.box a:hover {
  background: #000;
}

li.box .image_box {
  display: block;
  width: <%= Settings.thumb_width %>px;
}



/* status bar */
.image_box {
  position: relative;
}

.image_box .status {
  display: block;
  height: 18px;
  padding: 6px 10px;
  position: absolute;
  left: 0;
  bottom: 0;
  width: <%= Settings.thumb_width - 16 %>px;
  background: transparent url("<%= image_path 'transblack.png' %>") repeat;
  visibility: hidden;
}

.image_box:hover .status {
  visibility: visible;
}

.image_box .status p {
  display: block;
  width: <%= Settings.thumb_width - 16 %>px;
  margin: 0;
  color: #fff;
  font-weight: bold;
}

.image_box .status .tag {
  float: left;
  text-align: left;
  width: <%= (Settings.thumb_width) / 2 - 16 %>px;
  overflow: hidden;
  text-wrap: none;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.image_box .status .like {
  text-align: right;
}

.image_box .status a {
  color: #fff;
  cursor: pointer;
}

.image_box .status .like a {
  text-decoration: none;
  border-bottom: 1px solid #e30;
}

.image_box .status .like a.icon-remove {
  border-bottom: 1px solid #fff;
}

.image_box .status [class^="icon-"], .image_box .status [class*=" icon-"] {
  display: inline;
}

.image_box .status [class^="icon-"]:before, .image_box .status [class*=" icon-"]:before {
  letter-spacing: 3px;
}

.image_box .status .icon-heart:before {
  color: #e30;
}

.image_box .status .icon-remove {
  margin-left: 0.5em;
}

.image_box .status .icon-remove:before {
  letter-spacing: 0;
}



/* jQuery */
.ui-dialog-titlebar {
  display: none;
}
